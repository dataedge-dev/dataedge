---
import '../styles/global.css'; // Importando o CSS que acabamos de configurar
import '@fontsource/inter';
import '@fontsource/plus-jakarta-sans';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Automação e Tecnologia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="overflow-x-hidden">
        <div class="fixed inset-0 z-[-1] bg-[size:50px_50px] bg-grid-pattern opacity-20 pointer-events-none"></div>
		
        <slot />
	</body>
</html>

<style is:global>
    ::-webkit-scrollbar { width: 10px; }
    ::-webkit-scrollbar-track { background: #022c22; }
    ::-webkit-scrollbar-thumb { background: #14532d; border-radius: 5px; }
    ::-webkit-scrollbar-thumb:hover { background: #a3e635; }
</style>